# ============================================================================
# AXON - Agent Trace Visualizer
# Environment Configuration Example
# ============================================================================
# 
# Copy this file to .env and fill in your values:
#   cp env.example .env
#
# ============================================================================

# ----------------------------------------------------------------------------
# Backend Configuration
# ----------------------------------------------------------------------------

# Port for the backend API server
PORT=3000

# Host binding (0.0.0.0 for Docker, 127.0.0.1 for local)
HOST=0.0.0.0

# Node environment (production, development, test)
NODE_ENV=production

# Database path (Docker uses /data/traces.db)
DATABASE_PATH=/data/traces.db

# Logging level (error, warn, info, debug, trace)
LOG_LEVEL=info

# ----------------------------------------------------------------------------
# Dashboard Configuration
# ----------------------------------------------------------------------------

# API URL for the dashboard (used in development mode)
# In production with Docker, nginx proxy handles this
VITE_API_URL=http://localhost:3000

# WebSocket URL (optional)
VITE_WS_URL=ws://localhost:3000

# ----------------------------------------------------------------------------
# OpenAI Configuration (for test agents)
# ----------------------------------------------------------------------------

# Your OpenAI API key (required for running test agents)
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Organization ID (optional)
# OPENAI_ORG_ID=org-your-org-id

# ----------------------------------------------------------------------------
# LangChain Configuration (for LangChain tracer)
# ----------------------------------------------------------------------------

# LangSmith API key (optional, for LangChain tracing)
# LANGCHAIN_API_KEY=your-langsmith-api-key

# LangSmith tracing (optional)
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_PROJECT=axon-traces

# ----------------------------------------------------------------------------
# Docker Configuration
# ----------------------------------------------------------------------------

# Docker Compose project name (optional)
COMPOSE_PROJECT_NAME=axon

# ----------------------------------------------------------------------------
# Testing Configuration
# ----------------------------------------------------------------------------

# Test mode (set to true when running tests)
# TEST_MODE=false

# Test database path (separate from production)
# TEST_DATABASE_PATH=/data/test-traces.db

# ----------------------------------------------------------------------------
# Security (Production)
# ----------------------------------------------------------------------------

# CORS origins (comma-separated list)
# CORS_ORIGINS=http://localhost:8080,http://localhost:5173

# API rate limiting (requests per minute)
# RATE_LIMIT=100

# Enable authentication (optional)
# AUTH_ENABLED=false
# JWT_SECRET=your-secret-key-here

# ----------------------------------------------------------------------------
# Advanced Configuration
# ----------------------------------------------------------------------------

# Max database size in MB
# MAX_DB_SIZE=1000

# Trace retention period in days (0 = keep forever)
# TRACE_RETENTION_DAYS=30

# Enable metrics endpoint
# METRICS_ENABLED=false

# Custom port for metrics
# METRICS_PORT=9090

