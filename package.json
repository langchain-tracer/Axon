{
  "name": "agent-trace-visualizer",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/*",
    "backend",
    "dashboard"
  ],
  "scripts": {
    "dev": "concurrently -k -n backend,dashboard \"npm run dev --workspace=backend\" \"npm run dev --workspace=dashboard\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:dashboard": "npm run dev --workspace=dashboard",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces --if-present",
    "clean": "rm -rf node_modules packages/*/node_modules backend/node_modules dashboard/node_modules packages/*/dist backend/dist dashboard/dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "supports-color": "^8",
    "typescript": "^5.3.3",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "socket.io-client": "^4.8.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  }
}
